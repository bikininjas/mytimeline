# Google Cloud Platform Configuration
# Copy this file to .env.gcp and update with your actual values

# GCP Project Configuration
GCP_PROJECT_ID=timeline-app-dev
GCP_REGION=us-central1
GCP_SERVICE_NAME=timeline-app

# Artifact Registry Configuration
ARTIFACT_REGISTRY=us-central1-docker.pkg.dev

# Database Configuration (SQLiteCloud or Cloud SQL)
SQLITE_URL=sqlitecloud://your-project.sqlite.cloud:8860/your-database?apikey=your-api-key

# Cloud SQL Configuration (if using Cloud SQL instead of SQLiteCloud)
# CLOUD_SQL_INSTANCE=your-instance-name
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Application Configuration
NODE_ENV=development
PORT=3000

# Cloud Run Configuration
CLOUD_RUN_MEMORY=512Mi
CLOUD_RUN_CPU=1
CLOUD_RUN_MAX_INSTANCES=10
CLOUD_RUN_MIN_INSTANCES=0
CLOUD_RUN_TIMEOUT=300

# Monitoring and Logging (optional)
ENABLE_CLOUD_LOGGING=true
ENABLE_CLOUD_MONITORING=true

# Custom Domain (optional)
# CUSTOM_DOMAIN=your-domain.com

# Environment-specific settings
LOG_LEVEL=info
MAX_EVENTS=1000

# GitHub Actions CI/CD (set these as GitHub Secrets)
# GCP_SA_KEY=<base64-encoded-service-account-key>
# SQLITE_URL=<your-production-database-url>
