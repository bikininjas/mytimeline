# Timeline App Environment Variables
# Copy this file to .env and update with your actual values

# === LOCAL DEVELOPMENT CONFIGURATION ===

# Database Configuration (SQLiteCloud)
SQLITE_URL=sqlitecloud://your-project.sqlite.cloud:8860/your-database?apikey=your-api-key

# Alternative: Local SQLite database for development
# SQLITE_URL=sqlite:./timeline-local.db

# Server Configuration
PORT=3000
NODE_ENV=development

# === GOOGLE CLOUD CONFIGURATION (for local testing) ===
# These are used when testing GCP deployment locally

# Your GCP Project ID
GCP_PROJECT_ID=your-gcp-project-id

# Path to your service account key file (for local development)
GOOGLE_APPLICATION_CREDENTIALS=./gcp-service-account-key.json

# GCP Configuration
GCP_REGION=us-central1
GCP_SERVICE_NAME=timeline-app

# === OPTIONAL DEVELOPMENT SETTINGS ===

# Logging
LOG_LEVEL=debug

# Database
MAX_EVENTS=1000

# Development Features
ENABLE_DEBUG=true
HOT_RELOAD=true

# === PRODUCTION OVERRIDES (commented out for development) ===
# NODE_ENV=production
# LOG_LEVEL=info
# ENABLE_DEBUG=false
